{
  "name": "@stampdwn/vscode",
  "displayName": "Stampdown",
  "description": "Syntax highlighting for Stampdown template files (.sdt)",
  "version": "0.1.0",
  "publisher": "AscotSoftware",
  "icon": "./ext-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ascot-Software/stampdown.git",
    "directory": "packages/vscode"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "stampdown",
        "aliases": [
          "Stampdown",
          "stampdown",
          "sdt"
        ],
        "extensions": [
          ".sdt"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./file-icon.png",
          "dark": "./file-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "stampdown",
        "scopeName": "text.html.stampdown",
        "path": "./syntaxes/stampdown.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.markdown": "markdown"
        }
      }
    ]
  }
}
