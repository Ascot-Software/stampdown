{
  "name": "@stampdwn/workspace",
  "version": "0.1.1",
  "private": true,
  "description": "A Markdown templating language with Handlebars-like features",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present"
  },
  "keywords": [
    "markdown",
    "template",
    "templating",
    "handlebars",
    "expressions"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ascot-Software/stampdown.git"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@microsoft/api-documenter": "^7.28.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^60.8.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tsdoc": "^0.5.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "jsdoc-to-markdown": "^9.1.3",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5"
  }
}
